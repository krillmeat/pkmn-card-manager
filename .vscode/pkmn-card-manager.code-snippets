	// used to trigger the snippet and the body will be expanded and inserted. Possible variables are: 
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. 
	// Placeholders with the same ids are connected.
	// Example:
	// "Print to console": {
	// 	"scope": "javascript,typescript",
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"PKMN Data": {
		"scope": "javascript",
		"prefix": "pkmn_data",
		"body": [
			"$1: {name: '$2', cardType:'pkmn', type: '$3'},$0"
		]
	},
	"Attack": {
		"scope": "javascript",
		"prefix": "pkmn_attack",
		"body": "{type:'attack', name:'$1', cost: [$2], dmg:$3, text:\"$4\"},"
	},
	"POKE POWER": {
		"scope": "javascript",
		"prefix": "pkmn_power",
		"body": [
			"{type:'power', name:'$1', text: \"$2\"},"
		]
	},
	"Item Data": {
